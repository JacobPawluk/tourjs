{{tourjs-header}}
<div class="set-up-ride__content">
  <div class="set-up-ride__create-your-own">
    {{#unless settingUpRide}}
      <button class="set-up-ride__create-your-own--button" {{action 'toggleRideWidget'}}>
        Preschedule Ride
      </button>
    {{else}}
      {{create-race-widget onRaceCreated=(action 'onRaceCreated')}}
    {{/unless}}
  </div>
  <div class="set-up-ride__title">
    Current Joinable Rides <a href='#' {{action 'refreshAllRaces'}}>Refresh</a>
  </div>

  {{#each model.races as |race|}}
    {{pending-race frame=frame race=race joinRace=(action 'joinRace')}}
  {{/each}}
</div>