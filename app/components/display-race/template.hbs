
<div class="display-race__content">
  <div class="display-race__main-holder">
    {{main-map raceState=raceState}}
    <div class="display-race__controls-container">
      {{#if overlay}}
        <div class="display-race__rankings-container">
          {{component overlay raceState=raceState overlayData=overlayData frame=frame}}
        </div>
      {{/if}}
      <div class="display-race__controls-gap"></div>
      <div class="display-race__status-and-map">
        
        <div class="display-race__status-container">
          {{user-dashboard raceState=raceState frame=frame}}
        </div>
        <div class="display-race__mini-map-container">
          {{mini-map-live raceState=raceState}}
        </div>
        
      </div>
      <div class="display-race__handicap-update-container {{if recentHandicapChange 'show'}}">
        Handicap revised to {{recentHandicapChange}}<br>
        Congratulations!
      </div>
    </div>
  </div>
</div>